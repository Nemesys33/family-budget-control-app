<Window x:Class="VKR_Abrashkov_V_V.MakeCred"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKR_Abrashkov_V_V"
        mc:Ignorable="d"
        Title="Создать кредит" Height="350" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <TextBlock Text="Процентная ставка" Margin="10, 10, 10, 0" />
            <TextBox Name="perc" Margin="10, 10, 0, 10" />
            <TextBlock Text="Сумма" Margin="10, 10, 10, 0" />
            <TextBox Name="sum" Margin="10, 10, 0, 10" />
            <TextBlock Text="Дата погашения" Margin="10, 10, 10, 0" />
            <DatePicker Name="date" Margin="10, 10, 0, 10" />
            <TextBlock Text="Цель кредита" Margin="10, 10, 10, 0" />
            <TextBox Name="purp" Margin="10, 10, 0, 10" />
            <Button Name="Accept" Content="Подтвердить" Click="Accept_Click"  Margin="10, 10, 0, 10" />
        </WrapPanel>
    </Grid>
</Window>